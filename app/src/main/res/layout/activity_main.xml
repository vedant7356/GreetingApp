<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, World!"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/customGreetingEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your custom greeting"
        android:layout_below="@id/greetingTextView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="10dp"
        android:background="@drawable/edit_text_background"
        android:inputType="text"/>

    <Button
        android:id="@+id/changeGreetingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Custom Greeting"
        android:layout_below="@id/customGreetingEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
